<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iitg.scientificcalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iitg.scientificcalculator.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.Basic"
            android:label="@string/title_activity_basic" >
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.Advanced"
            android:label="@string/title_activity_advanced" >
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.Other"
            android:label="@string/title_activity_other" >
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.InterestCalculator"
            android:label="@string/title_activity_interest_calculator"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.History"
            android:label="@string/title_activity_history"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.iitg.scientificcalculator.About"
            android:label="@string/title_activity_about"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.iitg.scientificcalculator.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>