<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advBlock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bOHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:gravity="center"
        android:onClick="whenClick"
        android:text=" ▼ "
        android:textColor="#fff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_weight="6"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tvOther1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#00000000"
            android:editable="false"
            android:gravity="center|right"
            android:inputType="none"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvOther"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center|right"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" >

            <Button
                android:id="@+id/modeB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blackbutton"
                android:onClick="whenClick"
                android:text="Basic"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/modeA"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blackbutton"
                android:onClick="whenClick"
                android:text="Adv"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/modeO"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blackbutton"
                android:onClick="whenClick"
                android:text="Other"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0sp"
            android:layout_weight="2" >

            <Button
                android:id="@+id/benter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text=","
                android:textColor="#fff"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bHypo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="Hypo"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bRand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="Rand"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bCOther"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="C"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0sp"
            android:layout_weight="2" >

            <Button
                android:id="@+id/bx1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="ax+b = d"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bx2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="ax²+bx+c = d"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/b2u"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="2 Unknown"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/b3u"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="3 Unknown"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0sp"
            android:layout_weight="2" >

            <Button
                android:id="@+id/bnpr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="nPr"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bncr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="nCr"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/blogBase2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="log"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bBMI"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="BMI"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0sp"
            android:layout_weight="2" >

            <Button
                android:id="@+id/basin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="asin"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bacos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="acos"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/batan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="atan"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bequal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="whenClick"
                android:text="="
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>