<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/vlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:onClick="whenClick"
            android:text="List"
            android:textColor="#fff" />

        <Button
            android:id="@+id/vvideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:onClick="whenClick"
            android:text="Video"
            android:textColor="#fff" />

        <Button
            android:id="@+id/vanimation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:onClick="whenClick"
            android:text="Animation"
            android:textColor="#fff" />

        <Button
            android:id="@+id/vmore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:onClick="whenClick"
            android:text="more"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/tvVideoSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="2sp"
            android:layout_weight="8"
            android:background="@drawable/edittext"
            android:hint="@string/hint"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/bSearchVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4sp"
            android:layout_weight="2"
            android:background="@drawable/edittext_button"
            android:onClick="whenClick"
            android:padding="10dp"
            android:text="Show"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="\n\n\n\n\nVideo looks best in Landscape mode\nPlay video and change screen color from menu\nfor best effects" />

</LinearLayout>